{
  "extends": "@cloudcommerce/storefront/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@@i18n": ["./node_modules/@cloudcommerce/i18n/src/pt_br.ts"],
      "@@sf/*": ["./node_modules/@cloudcommerce/storefront/src/lib/*"],
      "@@components/*": [
        "./src/components/*",
        "./node_modules/@cloudcommerce/storefront/src/lib/components/*",
      ],
      "~/*": ["./src/*"],
      "content/*": ["./content/*"],
    }
  }
}
