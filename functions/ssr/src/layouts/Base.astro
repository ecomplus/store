---
import type { RouteContext } from '@@sf/ssr-context';
import SfBase from '@@sf/layouts/Base.astro';
import InlineScripts from '~/scripts/InlineScripts.astro';

export interface Props {
  routeContext: RouteContext;
  title?: string;
}

const { routeContext, title } = Astro.props as Props;
---

<SfBase routeContext={routeContext} title={title}>
  <InlineScripts slot="before-head-end" />
  <slot />
</SfBase>

<style is:global>
html {
  scroll-behavior: smooth;
}
body {
  overflow-x: hidden;
}
a, button, button > * {
  transition: background-color var(--transition),
    color var(--transition), border-color var(--transition),
    opacity var(--transition), transform var(--transition-fast);
}
</style>
