---
const { apiResource, apiDoc } = Astro.locals.routeContext;
---

<main>
  {apiDoc &&
    <h1>Hello <span class="text-gradient">{apiDoc.name}</span></h1>
    <hr>
    <div class="mt-3">
      <mark>{apiDoc._id}</mark> from <i>{apiResource}</i>
      <p>{Math.random()}</p>
      <em>Lorem ipsum dolor sit amet</em>
    </div>
  }
</main>
